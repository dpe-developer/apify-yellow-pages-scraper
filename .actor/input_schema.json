{
    "title": "Yellow Pages Scraper",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchTerm": {
            "title": "Search",
            "type": "string",
            "description": "Search term for Yellow Pages.",
            "default": "e commerce",
            "editor": "textfield"
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "Geographical location for the search.",
            "default": "California City, CA",
            "editor": "textfield"
        },
        "maxPages": {
            "title": "Max Pages",
            "type": "integer",
            "description": "Maximum number of pages to scrape.",
            "default": 1,
            "editor": "numberfield"
        }
    },
    "required": ["searchTerm", "location", "maxPages"]
}
